{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "nim: build current file (for debugging)",
        "command": "nim",
        "args": [
            "c",
            "-d:release",
            //"--nimcache:cache",
            "--app:lib",
            "--gc:arc",
            "--noMain",
            "--debugger:native",
            "--o:plugin.clap",
            "main.nim"
        ],
        "options": {
            "cwd": "${workspaceRoot}"
        },
        "type": "shell",
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
]
}