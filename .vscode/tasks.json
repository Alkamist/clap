{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nim: build current file (for debugging)",
      "command": "nim",
      "args": [
        "c",
        "-d:release",
        //"--nimcache:cache",
        //"--threads:on",
        // "--cc:vcc",
        "--app:lib",
        "--gc:arc",
        "--exceptions:goto",
        "--noMain",
        "--debugger:native",
        "--o:csscorrector.clap",
        "csscorrector.nim"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "type": "shell",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}